{
  "name": "@vxtraders/backend",
  "version": "1.0.0",
  "description": "Backend for Vx Traders",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch './src/**/*' --exec 'tsx' ./src/dev-server.ts",
    "start": "tsx ./src/dev-server.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=build/index.js",
    "clean": "rm -rf build"
  },
  "author": "Haider Hameed",
  "license": "ISC",
  "dependencies": {
    "@trpc/server": "^11.0.0-rc.467",
    "@vxtraders/shared": "*",
    "aws-lambda": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "axios-mock-adapter": "^1.22.0",
    "cors": "^2.8.5",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.16.5",
    "typescript": "^5.3.3"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
